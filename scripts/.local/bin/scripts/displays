#!/bin/sh
# Change primary display, disabling the other ones and restore wallpaper.

restore_wallpaper() {
	nitrogen --restore
}

output=$(printf "PC\nHDMI" | dmenu -i -p "Select display: ")

if [ "$output" = "PC" ]; then
	xrandr --output eDP1 --auto --output HDMI1 --off && restore_wallpaper
elif [ "$output" = "HDMI" ]; then
	xrandr --output HDMI1 --auto --output eDP1 --off && restore_wallpaper
fi
