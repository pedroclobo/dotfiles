#!/bin/sh
# Script to open files based on their extension

# Defaults
PDF="zathura"
IMAGE="sxiv"
VIDEO="mpv"

file=$(readlink -f "$1")
ext="${file##*.}"

open_file() {
	case "$ext" in
		pdf) "$PDF" "$file" ;;
		jpg|png) "$IMAGE" "$file" ;;
		mp4|mkv) "$VIDEO" "$file" ;;
		*) "$EDITOR" "$file" ;;
	esac
}

open_file "$file"
