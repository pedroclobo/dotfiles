#!/bin/sh
# Synchronize various files between computers

DESTINATION="desktop"

choice=$(printf "uni\nrepos\ncalendar" | fzf)

case $choice in
	uni) rsync -vru --delete ~/uni $DESTINATION: ;;
	repos) rsync -vru --exclude "dotfiles" --delete ~/repos $DESTINATION: ;;
	calendar) rsync -vr --delete ~/.local/share/calcurse/* $DESTINATION:~/.local/share/calcurse ;;
	*) ;;
esac
