#!/bin/sh
# Control the volume level

# Signal dwmblocks for a module update
update_bar() {
	kill -35 $(pidof dwmblocks)
}

# Change the volume by the value passed
change_volume() {
	pulsemixer --change-volume "$1"
}

# Toggle mute
toggle_mute() {
	pulsemixer --toggle-mute
}

case "$1" in
	"mute") toggle_mute ; update_bar ;;
	"-"[0-9]*|"+"[0-9]*) change_volume "$1" ; update_bar ;;
	*) echo "Invalid input!" ;;
esac
